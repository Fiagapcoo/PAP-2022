        md_bg_color: [215/255,228/255,247/255,1]
        padding: 20
        spacing: 30
        orientation: "vertical"

        MDLabel:
            text: 'Recuperar Password'
            font_style: 'Button'
            font_size: 45
            halign: "center"
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15
        MDTextFieldRound:
            id: user
            color: 1, 0, 0, 1
            hint_text: "Username"
            icon_left: "account"
            size_hint_x: None
