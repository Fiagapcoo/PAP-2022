Screen:
    md_bg_color : [215/255,228/255,247/255,1]
    Card:
        size_hint: None,None
        size: 320,600
        pos_hint: {"center_x":.5,"center_y":.5}
        elevation: 15
        md_bg_color: [215/255,228/255,247/255,1]
        padding: 20
        spacing: 30
        orientation: "vertical"

        MDLabel:
            text: 'LOGIN'
            font_style: 'Button'
            font_size: 45
            halign: "center"
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15
        MDTextFieldRound:
            id: user
            color: 1, 0, 0, 1
            hint_text: "Username"
            icon_left: "account"
            size_hint_x: None
            width: 220
            font_size: 20
            pos_hint: {"center_x":.5}
            color_active: [1,1,1,1]
        MDTextFieldRound:
            id: password
            hint_text: "password"
            icon_left: "eye-off"
            size_hint_x: None
            width: 220
            font_size: 20
            pos_hint: {"center_x":.5}
            color_active: [1,1,1,1]
            password: True
        MDRoundFlatButton:
            on_press: app.login()
            text: "Entrar"
            pos_hint: {"center_x":.5}
            font_size: 15
        Widget:
            size_hint_y: None
            height: 100
