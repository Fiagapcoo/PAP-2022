MDScreen:
    md_bg_color : [215/255,228/255,247/255,1]
    MDCard:
        size_hint: None,None
        size: 400,570
        pos_hint: {"center_x":.5,"center_y":.5}
        elevation: 15
        md_bg_color: [215/255,228/255,247/255,1]
        padding: 20
        spacing: 30
        orientation: "vertical"

        MDLabel:
            text: 'Verificação'
            font_style: 'Button'
            font_size: 45
            halign: "center"
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15
        MDTextFieldRound:
            id: email
            color: 1, 0, 0, 1
            hint_text: "Email"
            icon_left: "email"
            size_hint_x: None
            width: 280
            font_size: 18
            pos_hint: {"center_x":.5}
            color_active: [1,1,1,1]
        MDTextFieldRound:
            id: cod
            hint_text: "Codigo"
            icon_left: "eye-off"
            size_hint_x: None
            width: 280
            font_size: 18
            pos_hint: {"center_x":.5}
            color_active: [1,1,1,1]
        MDRoundFlatButton:
            on_press: app.email()
            text: "Enviar Codigo"
            pos_hint: {"center_x":.5}
            font_size: 15
        MDRoundFlatButton:
            id: but_verifica
            on_press: app.verificar()
            text: "Verificar Conta"
            pos_hint: {"center_x":.5}
            font_size: 15
            disabled: True

        Widget:
            size_hint_y: None
            height: 30
